<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <changeSet id="00000000000003-product-seq" author="BohdanMoldavets">
        <createSequence sequenceName="product_sequence" startValue="1" incrementBy="1"/>
    </changeSet>
    
    <changeSet id="00000000000003-picture-product-seq" author="BohdanMoldavets">
        <createSequence sequenceName="product-picture-sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="00000000000003-product-picture" author="BohdanMoldavets">
        <createTable tableName="product-picture">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file" type="${blobType}">
                <constraints nullable="false"/>
            </column>
            <column name="file_content_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="product_fk" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="product-picture" baseColumnNames="id"
                                 referencedTableName="product" referencedColumnNames="id"
                                 constraintName="fk_product_picture_constraint"
        />
    </changeSet>

    <changeSet id="00000000000003-product" author="BohdanMoldavets">
        <createTable tableName="product">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="public_id" type="${uuidType}">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="float"/>
            <column name="size" type="varchar(255)"/>
            <column name="color" type="varchar(255)"/>
            <column name="brand" type="varchar(255)"/>
            <column name="description" type="varchar(2000)"/>
            <column name="featured" type="bool"/>
            <column name="nb_in_stock" type="int"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="category_fk" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="product" baseColumnNames="category_fk"
                                 referencedTableName="product_category" referencedColumnNames="id"
                                 constraintName="fk-category-product-constraint" deferrable="false"
                                 initiallyDeferred="false"
                                 validate="true"
                                 onDelete="NO ACTION"
        />

    </changeSet>

</databaseChangeLog>